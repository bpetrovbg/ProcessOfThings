<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content">

    <RelativeLayout
        android:id="@+id/cellRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3sp">
        <ImageView
            android:id="@+id/cellImage"
            android:layout_width="100sp"
            android:layout_height="100sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/cellTextView"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cellRelativeLayout"
        android:paddingLeft="10sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Cappuccino"/>

    <TextView
        android:id="@+id/cellPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/cellTextView"
        android:textColor="@color/Green"/>
</RelativeLayout>